            case 'sunny': return 'ðŸŒž';
            case 'rainy': return 'ðŸŒ§ï¸';
            case 'cloudy': return 'â˜ï¸';
            case 'overcast': return 'â˜ï¸';
            case 'mist': return 'ðŸŒ«ï¸';
            case 'partly cloudy': return 'â›…';
            case 'thunderstorm': return 'â›ˆï¸';
            case 'snow': return 'â„ï¸';
            case 'fog': return 'ðŸŒ«ï¸';
            case 'windy': return 'ðŸ’¨';
            default: return 'â˜€ï¸';
        }
    };

    const formatDate = (dateString) => {
    const [year, month, day] = dateString.split('-'); 
    return `${month}-${day}-${year}`; 
};
document.addEventListener("DOMContentLoaded", () => {
        const dropdownItems = document.querySelectorAll(".dropdown-item"); 
        dropdownItems.forEach(item => {
            item.addEventListener("click", handleSelection); 
        });
    });

document.addEventListener("DOMContentLoaded", () => {
  const searchButton = document.getElementById("search-button");
  const weatherInput = document.getElementById("weather-input");
searchButton.addEventListener("click", () => {
    const searchQuery = weatherInput.value.trim();
    if(searchQuery !== '') {
      fetchWeatherData(searchQuery);
    } else {
      alert("Please enter a city or zip code");
    }
  });
weatherInput.addEventListener("keyup", (event) => {
    if(event.key === "Enter") {
      const searchQuery = weatherInput.value.trim();
      if(searchQuery !== '') {
        fetchWeatherData(searchQuery);
      } else {
        alert("Please enter a city or zip code");
      }
    }
  });
});

</script>


